/* components/commentsSection/index.wxss */
.main_box{
    margin-left:calc(60rpx + 20rpx) ;
}
.main_title{
    margin: 20rpx 0;
    font-weight: bold;
}
.header{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.name{
    font-size: 30rpx;
    font-weight: bold;
}
.time{
    color: #dddddd;
    font-size: 25rpx;
}
.content{
    font-size: 30rpx;
    line-height: 50rpx;
    margin-left: calc(60rpx + 10rpx);
    margin-bottom: 20rpx;
}
